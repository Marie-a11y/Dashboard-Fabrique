{
  "name": "dashboard-accessibilite",
  "version": "1.0.0",
  "description": "Dashboard d'accessibilité basé sur axe-core",
  "main": "server.js",
  "dependencies": {
    "axe-core": "^4.2.2",
    "canvas": "^2.11.2",
    "cssnano": "^6.1.0",
    "ejs": "^3.1.9",
    "express": "^4.17.1",
    "html-minifier": "^4.0.0",
    "postcss-cli": "^11.0.0",
    "puppeteer": "^22.6.0",
    "uglify-js": "^3.17.4"
  },
  "scripts": {
    "build": "npm run minify-js && npm run minify-css && npm start",
    "start": "node server.js",
    "minify-js": "uglifyjs ./public/main.js -o ./public/script.min.js",
    "minify-css": "postcss ./public/styles.css -o ./public/style.min.css"
  }
}
